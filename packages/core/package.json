{
  "name": "rehooks-ts",
  "description": "An optimized, lightweight, and reusable react production-ready hooks library written in TypeScript.",
  "version": "2.1.1",
  "private": false,
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "rehooks",
    "react",
    "typescript",
    "hooks",
    "monorepo",
    "turbo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "tsconfig": "workspace:*",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "react": "^18.3.1"
  },
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/Pyr33x/rehooks.git"
  },
  "bugs": {
    "url": "https://github.com/Pyr33x/rehooks/issues"
  },
  "homepage": "https://rehooks.pyr33x.ir"
}